<div class="d-flex justify-content-between p-3 my-3 text-white-50 bg-purple rounded box-shadow">
  <div class="lh-100">
    <h6 class="mb-0 text-white lh-100">Todo List</h6>
    <small>A project</small>
  </div>
  <div class="lh-100">
      <%= link_to new_task_path, remote: true, 'data-toggle':  "modal", 'data-target': '#modal-window', class: "btn btn-light" do %>
        <i class="fa fa-list"></i> Add
      <% end %>
  </div>
</div>

<% if @tasks.present? %>
  <div class="my-3 p-3 bg-white rounded box-shadow">
    <h6 class="border-bottom border-gray pb-2 mb-0">Tasks</h6>
    <% @tasks.each do |task| %>
      <div class="media text-muted pt-3">
        <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
          <div class="d-flex justify-content-between align-items-center w-100">
            <strong class="text-gray-dark"><%= task.title %></strong>
            <div>
              <%= link_to finish_task_path(task), method: :patch, class: "btn btn-success" do %>
                <i class="fa fa-check"></i>
              <% end %>
              <%= link_to task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
                <i class="fa fa-trash"></i>
              <% end %>
            </div>
          </div>
          <span class="d-block"><%= task.description %></span>
        </div>
      </div>
    <% end %>
    <!--<small class="d-block text-right mt-3">
      <a href="#">All updates</a>
    </small>-->
  </div>
<% end %>

<% if @tasks_done.present? %>
  <div class="my-3 p-3 bg-white rounded box-shadow">
    <h6 class="border-bottom border-gray pb-2 mb-0">Done</h6>
    <% @tasks_done.each do |task| %>
      <div class="media text-muted pt-3">
        <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
          <div class="d-flex justify-content-between align-items-center w-100">
            <strong class="text-gray-dark"><%= task.title %></strong>
            <div>
              <%= link_to finish_task_path(task), method: :patch, class: "btn btn-secondary" do %>
                <i class="fa fa-undo"></i>
              <% end %>
              <%= link_to task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary" do %>
                <i class="fa fa-trash"></i>
              <% end %>
            </div>
          </div>
          <span class="d-block"><%= task.description %></span>
        </div>
      </div>
    <% end %>
    <!--<small class="d-block text-right mt-3">
      <a href="#">All updates</a>
    </small>-->
  </div>
<% end %>
<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content"></div>
  </div>
</div>
<%= render 'tasks/dialog' %>